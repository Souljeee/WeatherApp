<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/weather_fragment_title_text_size</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/weather_fragment_info_text_size</item>
        <item name="android:layout_marginStart">@dimen/weather_fragment_info_margin_start</item>
    </style>
</resources>